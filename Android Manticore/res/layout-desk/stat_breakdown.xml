<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  >
  	<ImageView
  		android:id="@+id/statbreakdown_img"
  		android:src="@drawable/icon"
  		android:layout_alignParentTop="true"
  		android:layout_alignParentLeft="true"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_marginTop="5dp"
  		android:layout_marginLeft="5dp"
  		/>
    <TextView
    	android:id="@+id/statbreakdown_txtStat"
    	android:text="Stat"
    	android:layout_alignTop="@id/statbreakdown_img"
    	android:layout_toRightOf="@id/statbreakdown_img"
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content" 
    	android:textSize="24sp" 
    	/>
    <TextView
    	android:id="@+id/statbreakdown_lblApplied"
    	android:text="Applied Modifiers"
    	android:layout_below="@id/statbreakdown_img"
    	android:layout_alignLeft="@id/statbreakdown_img"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textSize="20sp"
    	/>
    <LinearLayout
    	android:id="@+id/statbreakdown_layoutApplied"
    	android:layout_alignLeft="@id/statbreakdown_lblApplied"
    	android:layout_below="@id/statbreakdown_lblApplied"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	/>
    <TextView
    	android:id="@+id/statbreakdown_lblNotApplied"
    	android:text="Not Applied:"  
    	android:layout_below="@id/statbreakdown_layoutApplied"
    	android:layout_alignLeft="@id/statbreakdown_layoutApplied"
    	android:layout_height="wrap_content" 
    	android:layout_width="match_parent" 
    	android:textSize="20sp"
    	android:layout_marginTop="10dip"
    	/>
    <LinearLayout
    	android:id="@+id/statbreakdown_layoutNotApplied"
    	android:layout_below="@id/statbreakdown_lblNotApplied"
    	android:layout_alignLeft="@id/statbreakdown_lblNotApplied"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	/>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView 
        android:id="@+id/dialog_lblRenameCharacter"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:text="%s has already been imported. You can overwrite the existing character or rename %s."
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        />

    <EditText
        android:id="@+id/dialog_etRenameCharacter"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="10dip"
        android:scrollHorizontally="true"
        android:autoText="false"
        android:capitalize="none"
        android:gravity="fill_horizontal"
        android:inputType="text"
        android:hint="New Name"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:layout_alignParentLeft="true"
        android:layout_below="@id/dialog_lblRenameCharacter"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/dialog_etRenameCharacter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        >
	   	<Button
	 	    android:id="@+id/dialog_btnRename"
	 	    android:layout_height="wrap_content"
	 	    android:layout_width="wrap_content"
	 	    android:layout_weight="1"
	 	    android:text="Rename"
	 	    />
	   	
	   	<Button
	 	    android:id="@+id/dialog_btnOverwrite"
	 	    android:layout_height="wrap_content"
	 	    android:layout_width="wrap_content"
	 	    android:text="Overwrite"
	 	    android:layout_weight="1"
	 	    />
	   	
	   	<Button
	 	    android:id="@+id/dialog_btnCancel"
	 	    android:layout_height="wrap_content"
	 	    android:layout_width="wrap_content"
	 	    android:text="Cancel"
	 	    android:layout_weight="1"
	 	    />
   	</LinearLayout>
</RelativeLayout>
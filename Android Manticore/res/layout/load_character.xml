<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" 
  android:orientation="vertical"
  >
    <Spinner 
    	android:layout_height="wrap_content" 
    	android:layout_width="match_parent" 
    	android:id="@+id/loadcharacter_cmbSource" 
    	/>
    <!-- ImageView
    	android:layout_height="100dip"
    	android:layout_width="100dip"
    	android:id="@+id/loadcharacter_iv"
    	
    	/-->
    <ListView 
    	android:id="@+id/loadcharacter_lstCharacters" 
    	android:layout_height="fill_parent" 
    	android:layout_width="match_parent"
    	android:visibility="visible"
	    />
	<TableLayout
		android:id="@+id/loadcharacter_tblURL"
		android:visibility="gone"
		android:layout_height="fill_parent"
		android:layout_width="match_parent"
		android:stretchColumns="1"
		>
		<TableRow>
			<TextView
				android:text="URL:"
				/>
			<EditText
				android:id="@+id/loadcharacter_txtURL"
				android:inputType="textUri"
				android:text="http://www.ncgeek.com/chase.dnd4e"
				/>
		</TableRow>
		<TableRow>
			<Button
				android:id="@+id/loadcharacter_btnLoad"
				android:text="Load"
				android:onClick="btnLoad_onClick"
				android:layout_gravity="center"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				/>
		</TableRow>
	</TableLayout>
</LinearLayout>

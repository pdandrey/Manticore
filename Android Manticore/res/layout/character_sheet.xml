<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:ncgeek="http://schemas.android.com/apk/res/com.ncgeek.android.manticore"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    >
    <ImageView 
    	android:id="@+id/charactersheet_img"
    	android:src="@drawable/icon"  
    	android:layout_height="130dp" 
    	android:layout_width="130dp" 
    	android:layout_alignParentLeft="true" 
    	android:layout_alignParentTop="true"
    	android:layout_marginRight="5dp"
    	/>
    <TextView
    	android:id="@+id/charactersheet_txtName" 
    	android:layout_height="wrap_content" 
    	android:layout_width="match_parent" 
    	android:textSize="24sp" 
    	android:textColor="#000000" 
    	android:text="Char Name" 
    	android:layout_toRightOf="@id/charactersheet_img" 
    	android:layout_alignParentTop="true" 
    	/>
    <TextView 
    	android:id="@+id/charactersheet_lblLevel"
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content"  
    	android:text="Level" 
    	android:layout_below="@id/charactersheet_txtName"
    	android:layout_alignLeft="@id/charactersheet_txtName"
    	/>
    <TextView 
    	android:id="@+id/charactersheet_txtLevel"
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content"  
    	android:text="99" 
    	android:layout_toRightOf="@id/charactersheet_lblLevel"
    	android:layout_alignTop="@id/charactersheet_lblLevel"
    	android:layout_marginLeft="3dp"
    	/>
    <TextView 
    	android:id="@+id/charactersheet_txtRace"
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content"  
    	android:text="Race" 
    	android:layout_toRightOf="@id/charactersheet_txtLevel"
    	android:layout_alignTop="@id/charactersheet_txtLevel"
    	android:layout_marginLeft="3dp"
    	/>
    <TextView 
    	android:id="@+id/charactersheet_txtClass"
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content"  
    	android:text="Class" 
    	android:layout_toRightOf="@id/charactersheet_txtRace"
    	android:layout_alignTop="@id/charactersheet_txtRace"
    	android:layout_marginLeft="3dp"
    	/>
   	<com.ncgeek.android.manticore.widgets.LabelBar
    	android:id="@+id/charactersheet_surgebar"
    	android:layout_width="200dp" 
 		android:layout_height="wrap_content"
 		android:layout_alignBottom="@id/charactersheet_img"
 		android:layout_alignLeft="@id/charactersheet_txtName"
    	android:layout_marginRight="5dp"
    	android:layout_marginBottom="10dp"
 		ncgeek:label="Healing Surges:"
    	ncgeek:max="8"
    	ncgeek:current="4"
    	ncgeek:barDrawable="@drawable/surge_bar"
    	/>
     <com.ncgeek.android.manticore.widgets.LabelBar
    	android:id="@+id/charactersheet_hpbar"
    	android:layout_width="200dp"
 		android:layout_height="wrap_content"
 		android:orientation="horizontal"
 		android:layout_above="@id/charactersheet_surgebar" 
    	android:layout_alignLeft="@id/charactersheet_surgebar"
 		android:layout_alignRight="@id/charactersheet_surgebar"
    	ncgeek:label="HP:"
    	ncgeek:max="57"
    	ncgeek:current="48"
    	ncgeek:temporary="3"
    	ncgeek:barDrawable="@drawable/hp_bar"
    	/>
    <LinearLayout
    	android:id="@+id/charactersheet_llDefenses"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_alignLeft="@id/charactersheet_img"
    	android:layout_below="@id/charactersheet_img"
    	>
    	<LinearLayout android:id="@+id/charactersheet_llDefenseAC" android:tag="AC" style="@style/charactersheet_defense_entry">
    		<TextView android:text="AC:" style="@style/charactersheet_defense_entry_label_text" />
    		<LinearLayout style="@style/charactersheet_defense_entry_label">
    			<ImageView android:src="@drawable/i_stat_ac" style="@style/charactersheet_defense_entry_label_icon"/>
    			<TextView android:id="@+id/charactersheet_txtAC" style="@style/charactersheet_defense_entry_value" />
    		</LinearLayout>    		
    	</LinearLayout>
    	<LinearLayout android:id="@+id/charactersheet_llDefenseFort" android:tag="Fortitude" style="@style/charactersheet_defense_entry">
    		<TextView android:text="Fort:" style="@style/charactersheet_defense_entry_label_text" />
    		<LinearLayout style="@style/charactersheet_defense_entry_label">
    			<ImageView android:src="@drawable/i_stat_fortitude" style="@style/charactersheet_defense_entry_label_icon"/>
    			<TextView android:id="@+id/charactersheet_txtFort" style="@style/charactersheet_defense_entry_value" />
    		</LinearLayout>
    	</LinearLayout>
    	<LinearLayout android:id="@+id/charactersheet_llDefenseReflex" android:tag="Reflex" style="@style/charactersheet_defense_entry">
    		<TextView android:text="Reflex:" style="@style/charactersheet_defense_entry_label_text" />
    		<LinearLayout style="@style/charactersheet_defense_entry_label">
    			<ImageView android:src="@drawable/i_stat_reflex" style="@style/charactersheet_defense_entry_label_icon"/>
    			<TextView android:id="@+id/charactersheet_txtReflex" style="@style/charactersheet_defense_entry_value" />
    		</LinearLayout>
    	</LinearLayout>
    	<LinearLayout android:id="@+id/charactersheet_llDefenseWill" android:tag="Will" style="@style/charactersheet_defense_entry">
    		<TextView android:text="Will:" style="@style/charactersheet_defense_entry_label_text" />
    		<LinearLayout style="@style/charactersheet_defense_entry_label">
    			<ImageView android:src="@drawable/i_stat_will" style="@style/charactersheet_defense_entry_label_icon"/>
    			<TextView android:id="@+id/charactersheet_txtWill" style="@style/charactersheet_defense_entry_value" />
    		</LinearLayout>
    	</LinearLayout>
   	</LinearLayout>
    <TableLayout
    	android:id="@+id/charactersheet_tblStats"
    	android:layout_height="wrap_content"
    	android:layout_width="220dp"
    	android:layout_alignLeft="@id/charactersheet_img"
    	android:layout_below="@id/charactersheet_llDefenses"
    	android:layout_marginTop="15dp"
    	>
    	<TableRow>
    		<ImageView android:src="@drawable/i_stat_str" style="@style/charactersheet_stat_icon" />
    		<TextView android:text="Strength" style="@style/charactersheet_stat_name" />
    		<TextView android:id="@+id/charactersheet_txtStr" style="@style/charactersheet_stat_value" />
    		<TextView android:id="@+id/charactersheet_txtStrMod" style="@style/charactersheet_stat_value" />
    	</TableRow>
    	<View style="@style/charactersheet_tablerow_border" />
    	<TableRow>
    		<ImageView android:src="@drawable/i_stat_con" style="@style/charactersheet_stat_icon" />
    		<TextView android:text="Constitution" style="@style/charactersheet_stat_name" />
    		<TextView android:id="@+id/charactersheet_txtCon" style="@style/charactersheet_stat_value" />
    		<TextView android:id="@+id/charactersheet_txtConMod" style="@style/charactersheet_stat_value" />
    	</TableRow>
    	<View style="@style/charactersheet_tablerow_border" />
    	<TableRow>
    		<ImageView android:src="@drawable/i_stat_dex" style="@style/charactersheet_stat_icon" />
    		<TextView android:text="Dexterity" style="@style/charactersheet_stat_name" />
    		<TextView android:id="@+id/charactersheet_txtDex" style="@style/charactersheet_stat_value" />
    		<TextView android:id="@+id/charactersheet_txtDexMod" style="@style/charactersheet_stat_value" />
    	</TableRow>
		<View style="@style/charactersheet_tablerow_border" />
    	<TableRow>
    		<ImageView android:src="@drawable/i_stat_int" style="@style/charactersheet_stat_icon" />
    		<TextView android:text="Intelligence" style="@style/charactersheet_stat_name" />
    		<TextView android:id="@+id/charactersheet_txtInt" style="@style/charactersheet_stat_value" />
    		<TextView android:id="@+id/charactersheet_txtIntMod" style="@style/charactersheet_stat_value" />
    	</TableRow>
    	<View style="@style/charactersheet_tablerow_border" />
    	<TableRow>
    		<ImageView android:src="@drawable/i_stat_wis" style="@style/charactersheet_stat_icon" />
    		<TextView android:text="Wisdom"  style="@style/charactersheet_stat_name" />
    		<TextView android:id="@+id/charactersheet_txtWis" style="@style/charactersheet_stat_value" />
    		<TextView android:id="@+id/charactersheet_txtWisMod" style="@style/charactersheet_stat_value" />
    	</TableRow>
    	<View style="@style/charactersheet_tablerow_border" />
    	<TableRow>
    		<ImageView android:src="@drawable/i_stat_cha" style="@style/charactersheet_stat_icon" />
    		<TextView android:text="Charisma" style="@style/charactersheet_stat_name" />
    		<TextView android:id="@+id/charactersheet_txtCha" style="@style/charactersheet_stat_value" />
    		<TextView android:id="@+id/charactersheet_txtChaMod" style="@style/charactersheet_stat_value" />
    	</TableRow>
   	</TableLayout>
    <LinearLayout
    	android:id="@+id/charactersheet_llStats"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:minWidth="80dp"
    	android:orientation="vertical"
    	android:layout_below="@id/charactersheet_llDefenses"
    	android:layout_alignTop="@id/charactersheet_tblStats"
    	android:layout_alignParentRight="true"
    	>
    	<LinearLayout android:id="@+id/charactersheet_llActionPoints" style="@style/charactersheet_defense_entry">
    		<TextView android:text="Action Points" style="@style/charactersheet_defense_entry_label_text" android:textSize="12sp" />
    		<LinearLayout style="@style/charactersheet_defense_entry_label">
    			<ImageView android:src="@drawable/i_stat_actionpoints" style="@style/charactersheet_defense_entry_label_icon"/>
    			<TextView android:id="@+id/charactersheet_txtActionPoints" style="@style/charactersheet_defense_entry_value" />
    		</LinearLayout>    		
    	</LinearLayout>
    	<LinearLayout android:id="@+id/charactersheet_llStatSpeed" android:tag="Speed" style="@style/charactersheet_defense_entry">
    		<TextView android:text="Speed" style="@style/charactersheet_defense_entry_label_text" />
    		<LinearLayout style="@style/charactersheet_defense_entry_label">
    			<ImageView android:src="@drawable/i_stat_speed" style="@style/charactersheet_defense_entry_label_icon"/>
    			<TextView android:id="@+id/charactersheet_txtSpeed" style="@style/charactersheet_defense_entry_value" />
    		</LinearLayout>    		
    	</LinearLayout>
    	<LinearLayout android:id="@+id/charactersheet_llStatInitiative" android:tag="Initiative" style="@style/charactersheet_defense_entry">
    		<TextView android:text="Initiative" style="@style/charactersheet_defense_entry_label_text" />
    		<LinearLayout style="@style/charactersheet_defense_entry_label">
    			<ImageView android:src="@drawable/i_stat_initiative" style="@style/charactersheet_defense_entry_label_icon"/>
    			<TextView android:id="@+id/charactersheet_txtInitiative" style="@style/charactersheet_defense_entry_value" />
    		</LinearLayout>    		
    	</LinearLayout>
   	</LinearLayout>
    <Gallery
    	android:id="@+id/mainmenu"  
    	android:layout_alignParentBottom="true" 
    	android:layout_alignParentRight="true"
    	android:layout_alignParentLeft="true"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:layout_marginBottom="5dp"
    	/>
   	
</RelativeLayout>

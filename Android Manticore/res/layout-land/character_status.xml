<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:ncgeek="http://schemas.android.com/apk/res/com.ncgeek.android.manticore"
	android:layout_width="130dp"
	android:layout_height="fill_parent"
	>
	<ImageView 
    	android:id="@+id/characterstatus_img"
    	android:src="@drawable/icon"  
    	android:layout_height="130dp" 
    	android:layout_width="130dp" 
    	android:layout_alignParentLeft="true" 
    	android:layout_alignParentTop="true"
    	android:layout_marginRight="5dp"
    	android:scaleType="fitCenter"
    	/>
    <TextView
    	android:id="@+id/characterstatus_txtName" 
    	android:layout_height="wrap_content" 
    	android:layout_width="fill_parent" 
    	android:textSize="24sp" 
    	android:text="Char Name" 
    	android:layout_below="@id/characterstatus_img" 
    	android:layout_alignLeft="@id/characterstatus_img" 
    	/>
    <TextView 
    	android:id="@+id/characterstatus_lblLevel"
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content"  
    	android:text="Level" 
    	android:layout_below="@id/characterstatus_txtName"
    	android:layout_alignLeft="@id/characterstatus_txtName"
    	/>
    <TextView 
    	android:id="@+id/characterstatus_txtLevel"
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content"  
    	android:text="99" 
    	android:layout_toRightOf="@id/characterstatus_lblLevel"
    	android:layout_alignTop="@id/characterstatus_lblLevel"
    	android:layout_marginLeft="3dp"
    	/>
    <TextView 
    	android:id="@+id/characterstatus_txtRace"
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content"  
    	android:text="Race" 
    	android:layout_toRightOf="@id/characterstatus_txtLevel"
    	android:layout_alignTop="@id/characterstatus_txtLevel"
    	android:layout_marginLeft="3dp"
    	/>
    <TextView 
    	android:id="@+id/characterstatus_txtClass"
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content"  
    	android:text="Class" 
    	android:layout_toRightOf="@id/characterstatus_txtRace"
    	android:layout_alignTop="@id/characterstatus_txtRace"
    	android:layout_marginLeft="3dp"
    	/>
   	<com.ncgeek.android.manticore.widgets.LabelBar
    	android:id="@+id/characterstatus_hpbar"
    	android:layout_width="130dp"
 		android:layout_height="wrap_content"
 		android:orientation="horizontal"
 		android:layout_below="@id/characterstatus_lblLevel" 
    	android:layout_alignLeft="@id/characterstatus_txtName"
    	android:layout_marginTop="5dp"
    	ncgeek:label="HP:"
    	ncgeek:max="57"
    	ncgeek:current="48"
    	ncgeek:temporary="3"
    	ncgeek:barDrawable="@drawable/hp_bar"
    	ncgeek:fontAsset="centaur.ttf"
    	ncgeek:textSize="10sp"
    	ncgeek:barHeight="10dp"
    	/>
   	<com.ncgeek.android.manticore.widgets.LabelBar
    	android:id="@+id/characterstatus_surgebar"
    	android:layout_width="wrap_content" 
 		android:layout_height="wrap_content"
 		android:layout_below="@id/characterstatus_hpbar"
 		android:layout_alignLeft="@id/characterstatus_hpbar"
 		android:layout_alignRight="@id/characterstatus_hpbar"
 		ncgeek:label="Surges:"
    	ncgeek:max="8"
    	ncgeek:current="4"
    	ncgeek:barDrawable="@drawable/surge_bar"
    	ncgeek:fontAsset="centaur.ttf"
    	ncgeek:textSize="10sp"
    	ncgeek:barHeight="10dp"
    	/>
     
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="charactersheet_ability_name">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#FFFFFF</item>
	</style>
	<style name="charactersheet_ability_value">
		<item name="android:background">#FFFFFF</item>
		<item name="android:textColor">#000000</item>
		<item name="android:layout_marginLeft">5dip</item>
		<item name="android:layout_marginBottom">7dip</item>
		<item name="android:layout_width">25dip</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center_vertical|center_horizontal</item>
	</style>
	<style name="charactersheet_defense_entry">
		<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:layout_weight">1</item>
    	<item name="android:orientation">horizontal</item>
	</style>
	<style name="charactersheet_defense_entry_label">
		<item name="android:layout_width">wrap_content</item> 
    	<item name="android:layout_height">wrap_content</item> 
 		<item name="android:orientation">vertical</item> 
 		<item name="android:layout_weight">1</item>
	</style>
	<style name="charactersheet_defense_entry_label_icon">
		<item name="android:layout_width">wrap_content</item> 
 		<item name="android:layout_height">wrap_content</item> 
 		<item name="android:layout_gravity">center_horizontal</item>
	</style>
	<style name="charactersheet_defense_entry_label_text">
		<item name="android:layout_width">wrap_content</item> 
		<item name="android:layout_height">wrap_content</item> 
		<item name="android:layout_gravity">center_vertical|center_horizontal</item> 
		<item name="android:textStyle">bold</item>
	</style>
	<style name="charactersheet_defense_entry_value">
		<item name="android:layout_width">wrap_content</item> 
    	<item name="android:layout_height">wrap_content</item> 
    	<item name="android:layout_gravity">center_vertical|center_horizontal</item>
    	<item name="android:textStyle">bold</item> 
    	<item name="android:textSize">24sp</item>
    	<item name="android:layout_weight">1</item>
	</style>
</resources>

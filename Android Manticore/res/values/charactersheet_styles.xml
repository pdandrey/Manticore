<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="charactersheet_stat_name">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">5dp</item>
		<item name="android:textSize">22sp</item>
	</style>
	<style name="charactersheet_stat_value">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center_vertical|center_horizontal</item>
		<item name="android:layout_marginLeft">5dp</item>
		<item name="android:text">+0</item>
		<item name="android:textSize">22sp</item>
	</style>
	<style name="charactersheet_defense_entry">
		<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:layout_weight">1</item>
    	<item name="android:orientation">vertical</item>
	</style>
	<style name="charactersheet_defense_entry_label">
		<item name="android:layout_width">fill_parent</item> 
    	<item name="android:layout_height">wrap_content</item> 
 		<item name="android:orientation">horizontal</item> 
 		<item name="android:layout_weight">1</item>
	</style>
	<style name="charactersheet_defense_entry_label_icon">
		<item name="android:layout_width">wrap_content</item> 
 		<item name="android:layout_height">wrap_content</item> 
 		<item name="android:layout_gravity">center_horizontal</item>
 		<item name="android:layout_weight">1</item>
	</style>
	<style name="charactersheet_defense_entry_label_text">
		<item name="android:layout_width">wrap_content</item> 
		<item name="android:layout_height">wrap_content</item> 
		<item name="android:layout_gravity">center_vertical|center_horizontal</item> 
		<item name="android:textStyle">bold</item>
	</style>
	<style name="charactersheet_defense_entry_value">
		<item name="android:layout_width">wrap_content</item> 
    	<item name="android:layout_height">wrap_content</item> 
    	<item name="android:layout_gravity">center_vertical|center_horizontal</item>
    	<item name="android:textStyle">bold</item> 
    	<item name="android:textSize">24sp</item>
    	<item name="android:layout_weight">1</item>
    	<item name="android:text">99</item>
	</style>
	<style name="charactersheet_stat_icon">
		<item name="android:layout_width">22dp</item> 
		<item name="android:layout_height">22dp</item> 
		<item name="android:scaleType">fitXY</item>
		<item name="android:layout_marginLeft">5dp</item>
		<item name="android:layout_marginTop">2dp</item>
	</style>
	<style name="charactersheet_tablerow_border">
		<item name="android:layout_height">1dip</item> 
		<item name="android:layout_width">fill_parent</item> 
		<item name="android:background">#AA000000</item>
	</style>
</resources>
